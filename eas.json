{
  "cli": {
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "android": {
        "buildType": "apk",
        "developmentClient": true,
        "env": {
          "APP_ENV": "development",
          "API_URL": "http://localhost:3000/api"
        },
        "distribution": "internal"
      }
    },
    "preview": {
      "android": {
        "buildType": "apk",
        "env": {
          "APP_ENV": "staging",
          "API_URL": "https://back.aurapp.com.mx/api"
        },
        "distribution": "internal"
      },
      "ios": {
        "simulator": true,
        "env": {
          "APP_ENV": "staging",
          "API_URL": "https://back.aurapp.com.mx/api"
        }
      }
    },
    "production": {
      "android": {
        "env": {
          "APP_ENV": "production",
          "API_URL": "https://back.aurapp.com.mx/api",
          "GOOGLE_SERVICES_JSON_FILE": "${GOOGLE_SERVICES_JSON}"
        },
        "hooks": {
          "post-install": [
            {
              "command": "node ./scripts/prepare-google-services.js"
            }
          ]
        }
      },
      "ios": {
        "env": {
          "APP_ENV": "production",
          "API_URL": "https://back.aurapp.com.mx/api"
        }
      }
    }
  },
  "submit": {
    "production": {}
  }
}
